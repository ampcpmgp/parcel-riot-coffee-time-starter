{
  "name": "parcel-riot-coffee-time-starter",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "TODO: dist": "uglify js",
    "dist": "run-s dist:*",
    "dist:clean": "rimraf dist",
    "dist:build": "parcel build src/index.html",
    "lint": "standard src --verbose | snazzy && standard src/app/**/*.tag.html --verbose | snazzy",
    "prestart": "run-s build:riot",
    "start": "run-p watch:**",
    "build:riot": "riot src/app --ext tag.html",
    "watch:parcel:pattern": "parcel --open -p 1235 -d .dev/pattern mock/__src__/pattern.html",
    "watch:parcel:mock": "parcel -p 1234 -d .dev/mock mock/__src__/index.html",
    "watch:riot": "chokidar \"src/app/**/*.tag.html\" -c \"riot {path} --ext tag.html\""
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "am-coffee-time": "^0.9.16",
    "axios": "^0.17.1",
    "axios-mock-adapter": "^1.13.1",
    "babel-polyfill": "^6.26.0",
    "chokidar-cli": "^1.2.0",
    "cross-env": "^5.1.3",
    "dob": "^2.5.8",
    "eslint-plugin-riot": "^0.1.7",
    "less": "^3.0.1",
    "normalize.css": "^8.0.0",
    "npm-run-all": "^4.1.2",
    "parcel-bundler": "^1.6.2",
    "rimraf": "^2.6.2",
    "riot": "^3.9.0",
    "snazzy": "^7.0.0",
    "standard": "^10.0.3"
  },
  "standard": {
    "globals": [
      "opts"
    ],
    "plugins": [
      "riot"
    ]
  }
}
